{
    "name": "graphql-boilerplate",
    "version": "1.0.0",
    "description": "An opinionated graphql boilerplate",
    "main": "index.ts",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon -e ts,graphql -x ts-node src/index.ts",
        "start": "cross-env NODE_ENV=production node build/src/index.js",
        "debug": "nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
        "clean": "rimraf coverage build tmp",
        "build": "tsc -p tsconfig.release.json",
        "build:watch": "tsc -w -p tsconfig.release.json",
        "lint": "eslint . --ext .ts,.tsx",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
        "prepare": "husky install .config/husky"
    },
    "keywords": [],
    "author": "Brandon Hee",
    "dependencies": {
        "apollo-server": "^3.5.0",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "graphql": "^16.0.1",
        "prettier": "^2.4.1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@typescript-eslint/parser": "^5.3.1",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "jest-cli": "^27.3.1",
        "rimraf": "^3.0.2",
        "ts-node": "^10.4.0",
        "typescript": "4.4.4"
    }
}
